<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/item_add_float_button">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--二级功能行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/PaymentManagementButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/PaymentManagement"/>
        </LinearLayout>
        <!--三级功能行-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/orderpaymentlistbutton" />
                <Button
                    android:id="@+id/OrderPaymentListButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OrderPaymentList"/>
            </LinearLayout>
        </HorizontalScrollView>
        <!--item展示框-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:orientation="vertical">
                <!--第1个item-->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:background="@color/white">
                    <TableRow
                        android:layout_margin="@dimen/item_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/CreateDateTime"
                            android:textColor="@color/black"
                            android:textSize="@dimen/item_text_size" />
                        <TextView
                            android:id="@+id/CreateDateTime_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_margin="@dimen/item_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/UpdateDateTime"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/UpdateDateTime_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_margin="@dimen/item_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/OrderPaymentCodeID"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/OrderPaymentCodeID_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_margin="@dimen/item_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/OrderCodeID"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/OrderCodeID_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                    </TableRow>
                    <TableRow
                        android:layout_margin="@dimen/item_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/UserCodeID"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/UserCodeID_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/item_text_size"
                            android:textColor="@color/black"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>